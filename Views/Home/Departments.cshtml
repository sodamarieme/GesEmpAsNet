@model GesEmpAspNet.Models.DepartmentsViewModel

@{
    ViewData["Title"] = "Liste des Departements";
}

<div class="d-flex align-items-center mb-4">
    <h2 class="me-auto">Liste des Departements</h2>
    <form class="d-flex" method="get" asp-action="Departments" asp-controller="Home">
        <input class="form-control me-2" type="search" placeholder="Rechercher un compte..." aria-label="Search" name="search" value="@Model.Search" />
        <button class="btn btn-primary me-2" type="submit">Q Creer</button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-borderless align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date de Création</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Departments)
            {
                <tr>
                    <td>@d.Id</td>
                    <td>@d.Name</td>
                    <td>@d.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td><span class="badge bg-primary">@d.Status</span></td>
                    <td>
                        <a class="btn btn-info btn-sm text-white" href="#">@("@Employees")</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
    </ul>
</nav>
